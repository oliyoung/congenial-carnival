{
	"files": ["**/*.{ts,tsx,js,jsx}"],
	"exclude": ["node_modules", "build", "dist"],
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index"
				],
				"newlines-between": "always",
				"alphabetize": { "order": "asc", "caseInsensitive": true }
			}
		]
	}
}
